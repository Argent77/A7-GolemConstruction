// *** Golem construction cutscene (lesser variant) ***

IF
  True()
THEN
  RESPONSE #100
    // CutSceneId("a7!smdlg")
    CutSceneId(Myself)
    ClearAllActions()
    FadeToColor([30.0],0)
    Wait(2)
    AdvanceTime(3600) // 12 hours
    JumpToObject(LastSummonerOf(Myself))  // Hack: needed or the helper creature is located at [0.0] of the map
    FadeFromColor([30.0],0)
    Wait(2)
    StartDialogueNoSet(LastSummonerOf(Myself))
END
